<Project>
	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<LangVersion>Preview</LangVersion>
		<DefaultLanguage>en-US</DefaultLanguage>
		<Nullable>enable</Nullable>
		<Features>strict</Features>
		<RepositoryUrl>https://github.com/NetDefender/Ugradier</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<ProjectUrl>https://github.com/NetDefender/Ugradier</ProjectUrl>
		<Authors>Daniel Garcia Martin</Authors>
		<Owners>Daniel Garcia Martin</Owners>
		<Company>Daniel Garcia Martin</Company>
		<Copyright>Copyright (c) 2023 Daniel Garcia Martin</Copyright>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)' == 'Release'">
		<PackageId>$(AssemblyName)</PackageId>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageOutputPath>$(MSBuildThisFileDirectory)artifacts/</PackageOutputPath>
		<PackageIcon>Upgradier.png</PackageIcon>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Binder" />
		<PackageReference Include="MinVer" />
	</ItemGroup>

	<ItemGroup Condition="$(DefineSwitches.Contains('EF'))">
		<PackageReference Include="Microsoft.EntityFrameworkCore" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Design" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Relational" />
	</ItemGroup>

	<ItemGroup>
		<None Include="../../Upgradier.png">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
		<None Include="../../README.md">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<Using Include="System" />
		<Using Include="System.IO" />
		<Using Include="System.Collections.Generic"/>
		<Using Include="System.Threading.Tasks"/>
		<Using Include="System.Threading"/>
		<Using Include="System.Linq"/>
	</ItemGroup>

</Project>